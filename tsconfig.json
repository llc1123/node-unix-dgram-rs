{
  "compilerOptions": {
    "target": "ES2018",
    "lib": [
      "ES2018"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "declaration": true
  },
  "include": [
    "."
  ],
  "exclude": [
    "__test__"
  ]
}